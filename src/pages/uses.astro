---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Uses | Steve R Gibson";
const description =
    "The tools I use to multiply my output. A glimpse into my AI-Native operating system.";
---

<BaseLayout title={pageTitle} description={description}>
    <section class="max-w-3xl mx-auto space-y-12 mb-20">
        <header class="space-y-4">
            <h1 class="text-4xl font-bold text-slate-900 dark:text-white">
                The Toolbox
            </h1>
            <p class="text-lg text-slate-600 dark:text-slate-400">
                The hardware, software, and AI models I use to multiply output.
                inspired by <a
                    href="https://uses.tech/"
                    class="underline hover:text-blue-600 transition-colors"
                >
                    uses.tech
                </a>
            </p>
        </header>

        <div class="space-y-12">
            <!-- AI Stack -->
            <section
                class="bg-slate-50 dark:bg-slate-900 p-8 rounded-2xl border border-slate-200 dark:border-slate-800"
