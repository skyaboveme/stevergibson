---
const tools = [
    { name: "Google Ads", color: "hover:text-blue-500" },
    { name: "Google Analytics 4", color: "hover:text-amber-500" },
    { name: "Meta Ads", color: "hover:text-blue-600" },
    { name: "DV360", color: "hover:text-green-500" },
    { name: "Looker Studio", color: "hover:text-blue-400" },
    { name: "Microsoft Ads", color: "hover:text-cyan-600" },
    { name: "Tag Manager", color: "hover:text-blue-500" },
];
---

<section
    class="border-y border-slate-200 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-900/50 backdrop-blur-sm"
>
    <div class="max-w-5xl mx-auto px-4 sm:px-8 py-8">
        <p
            class="text-center text-sm font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-6"
        >
            Expertise Stack
        </p>
        <div
            class="flex flex-wrap justify-center items-center gap-x-8 gap-y-4 md:gap-x-12"
        >
            {
                tools.map((tool) => (
                    <span
                        class={`text-lg md:text-xl font-bold text-slate-400 dark:text-slate-500 transition-colors duration-300 ${tool.color} cursor-default select-none`}
                    >
                        {tool.name}
                    </span>
                ))
            }
        </div>
    </div>
</section>
